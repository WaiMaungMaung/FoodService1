@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
}
<h1>Restaurants</h1>
<form  method="get">
    <div class="form-control">
        <div class="input-group">
            <input type="search" asp-for="@Model.SearchTerm" class="form-control"/>
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">Cuisine</th>
            <th scope="col">
                <a asp-page=".\Edit" class="btn btn-outline-primary">Add</a>
            </th>

        </tr>
    </thead>
    @foreach (var res in Model.Restaurants)
    {
<tr>
    <td>@res.Id</td>
    <td>@res.Name</td>
    <td>@res.Location</td>
    <td>@res.Cuisine</td>
    <td>
        <a asp-page="./Detail" asp-route-restaurantId="@res.Id" class="btn btn-primary">Detail</a>
        <a asp-page="./Edit" asp-route-restaurantId="@res.Id" class="btn btn-secondary">Edit</a>
        

    </td>


</tr>
    }
</table>

@Model.Message

