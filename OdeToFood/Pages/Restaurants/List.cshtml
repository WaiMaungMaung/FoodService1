@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = " Detail";
}
<h1>Restaurants</h1>
<form  method="get">
    <div class="form-control">
        <div class="input-group">
            <input type="search" asp-for="@Model.SearchTerm" class="form-control"/>
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>
@foreach (var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
}
<br>
<a asp-page=".\Edit" class="btn btn-primary">Add New</a>
<br />

@section Footer
{ 
    @Model.Message;
    <span>Copyright from me</span>
}
