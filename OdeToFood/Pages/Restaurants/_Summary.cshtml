@using OdeToFood.Core
@model Restaurant

    <div class="panel panel-default">
        <div class="panel panel-heading">
            <h3>@Model.Name</h3>

        </div>
        <div class="panel panel-body">
            <span>Location:@Model.Location</span>
            <span>Cuisine:@Model.Cuisine</span>


        </div>
        <div class="panel panel-footer">
            <a asp-page="./Detail" asp-route-restaurantId="@Model.Id" class="btn btn-primary">Detail</a>
            <a asp-page="./Edit" asp-route-restaurantId="@Model.Id" class="btn btn-secondary">Edit</a>
            <a asp-page="./Delete" asp-route-restaurantId="@Model.Id" class="btn btn-secondary">Delete</a>
        </div>
    </div>

